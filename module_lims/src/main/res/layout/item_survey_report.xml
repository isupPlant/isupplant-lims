<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:background="@color/white">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_app"
            />

        <TextView
            android:id="@+id/tvOddNumbers"
            android:tag="tvOddNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:ellipsize="end"
            android:maxEms="13"
            android:singleLine="true"
            tools:text="chanpinqingjiajndan_20200606_2477777"
            android:textColor="@color/blue"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvEdit"
            android:tag="tvEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="编辑"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bgGray2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_new"
            />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/tvInspectionRequestNo"
            android:tag="tvInspectionRequestNo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            app:key="@string/lims_inspection_request_no"
            app:key_color="@color/black_text"
            app:gravity="right|center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_new"
            />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/tvGoods"
            android:tag="tvGoods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            app:key="@string/lims_goods"
            app:key_color="@color/black_text"
            app:gravity="right|center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_new"
            />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/tvBatchNumber"
            android:tag="tvBatchNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            app:key="@string/lims_batch_number"
            app:key_color="@color/black_text"
            app:gravity="right|center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_new"
            />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/tvCreator"
            android:tag="tvCreator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            app:key="@string/lims_creator"
            app:key_color="@color/black_text"
            app:gravity="right|center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_new"
            />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/tvInspectionDepartment"
            android:tag="tvInspectionDepartment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            app:key="@string/lims_inspection_department"
            app:key_color="@color/black_text"
            app:gravity="right|center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_new"
            />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/tvTime"
            android:tag="tvTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            app:key="@string/lims_time"
            app:key_color="@color/black_text"
            app:gravity="right|center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_new"
            />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/tvTestConclusion"
            android:tag="tvTestConclusion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            app:key="@string/lims_test_conclusion"
            app:key_color="@color/black_text"
            app:gravity="right|center_vertical"/>


    </LinearLayout>


</LinearLayout>