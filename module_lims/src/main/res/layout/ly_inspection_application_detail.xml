<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff9f9f9"
    >

    <com.supcon.mes.mbap.view.CustomDateView
        android:id="@+id/cdCheckTime"
        style="@style/yh_custom_view_horizontal_style"
        android:tag="cdCheckTime"
        app:editable="true"
        app:text_color="@color/font_333333"
        app:necessary="true"
        app:gravity="right|center_vertical"
        app:text="@string/lims_time" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>



    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/ctCheckPeople"
        style="@style/yh_custom_view_horizontal_style"
        android:tag="ctCheckPeople"
        app:key="请检人"
        app:content_hint="请选择请检人"
        app:content_color="@color/font_333333"
        app:editable="true"
        app:necessary="true"
        app:gravity="right|center_vertical"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/ctCheckDepartment"
        style="@style/yh_custom_view_horizontal_style"
        android:tag="ctCheckDepartment"
        app:content_color="@color/font_333333"
        app:key="请检部门"
        app:content_hint="请选择请检部门"
        app:editable="true"
        app:necessary="true"
        app:gravity="right|center_vertical"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/ctSamplingPoint"
        style="@style/yh_custom_view_horizontal_style"
        android:tag="ctSamplingPoint"
        app:key="采样点"
        app:content_hint="请选择请采样点"
        app:content_color="@color/font_333333"
        app:editable="true"
        app:gravity="right|center_vertical"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>

    <com.supcon.mes.mbap.view.CustomSpinner
        android:id="@+id/ctBusinessType"
        style="@style/yh_custom_view_horizontal_style"
        android:tag="ctBusinessType"
        app:key="业务类型"
        app:content_hint="请选择业务类型"
        app:text_color="@color/font_333333"
        app:editable="true"
        app:necessary="true"
        app:gravity="right|center_vertical"
        />



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/ctSupplier"
        style="@style/yh_custom_view_horizontal_style"
        android:tag="ctSupplier"
        app:key="供应商"
        app:content_hint="请选择供应商"
        app:content_color="@color/font_333333"
        app:editable="true"
        app:gravity="right|center_vertical"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>

    <RelativeLayout
        android:id="@+id/rlNeedLaboratory"
        android:tag="rlNeedLaboratory"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需实验室检验"
            android:textColor="@color/textColorblack"
            android:textSize="@dimen/fontSize_15sp"/>

        <ImageView
            android:id="@+id/ivNeedLaboratory"
            android:tag="ivNeedLaboratory"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_check_yes"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:background="#F9F9F9"
        android:gravity="center_vertical">

        <View
            android:layout_width="3dp"
            android:layout_height="@dimen/dp_14"
            android:background="#009AFC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="物料信息"
            android:textColor="#333333"
            android:textSize="@dimen/fontSize_14sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/ctMateriel"
        style="@style/yh_custom_view_horizontal_style"
        android:tag="ctMateriel"
        app:content_color="@color/font_333333"
        app:key="物料"
        app:content_hint="请选择物料"
        app:editable="true"
        app:necessary="true"
        app:gravity="right|center_vertical"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/ctMaterielUnit"
        style="@style/yh_custom_view_horizontal_style"
        android:tag="ctMaterielUnit"
        app:content_color="@color/font_333333"
        app:key="计量单位"
        app:editable="false"
        app:gravity="right|center_vertical"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>
    <com.supcon.mes.mbap.view.CustomEditText
        android:id="@+id/ceMaterielNum"
        style="@style/yh_custom_view_horizontal_style"
        android:tag="ceMaterielNum"
        app:text_color="@color/font_333333"
        app:key="数量"
        app:edit_hint="请输入数量"
        app:edit_hint_color="#A9A9A9"
        app:editable="true"
        app:gravity="right|center_vertical"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>
    <com.supcon.mes.mbap.view.CustomEditText
        android:id="@+id/ceMaterielBatchNumber"
        style="@style/yh_custom_view_horizontal_style"
        android:tag="ceMaterielBatchNumber"
        app:key="批号"
        app:edit_hint="请输入批号"
        app:edit_hint_color="#A9A9A9"
        app:text_color="@color/font_333333"
        app:necessary="true"
        app:gravity="right|center_vertical"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:gravity="center_vertical">

        <View
            android:layout_width="3dp"
            android:layout_height="@dimen/dp_14"
            android:background="#009AFC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="质量标准"
            android:textColor="#333333"
            android:textSize="@dimen/fontSize_14sp"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llStandardReference"
                android:tag="llStandardReference"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_reference"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参照"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginLeft="5.5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInspectionItems"
                android:layout_marginLeft="8.5dp"
                android:tag="llInspectionItems"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_inspection_items"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检验项目"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginLeft="5.5dp"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdcdcdc"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="9dp"
        android:paddingBottom="13dp"
        android:paddingStart="11dp"
        android:paddingEnd="12dp"
        android:background="#fff8f8f8">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:tag="recyclerView"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </RelativeLayout>





</LinearLayout>