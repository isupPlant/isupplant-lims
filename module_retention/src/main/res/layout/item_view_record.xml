<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/observeItemTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:tag="observeItemTv"
            app:content_color="@color/dark_text"
            app:content_size="14"
            app:gravity="right|center_vertical"
            app:key="@string/lims_observeItem"
            app:key_color="@color/c_scan_666"
            app:key_width="@dimen/dp_100"
            app:key_size="14" />
        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/observeValueTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:tag="observeValueTv"
            app:content_color="@color/dark_text"
            app:content_size="14"
            app:gravity="right|center_vertical"
            app:key="@string/lims_observeValue"
            app:key_color="@color/c_scan_666"
            app:key_width="@dimen/dp_100"
            app:key_size="14" />
        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/observeResultTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:tag="observeResultTv"
            app:content_color="@color/dark_text"
            app:content_size="14"
            app:gravity="right|center_vertical"
            app:key="@string/lims_observeResult"
            app:key_color="@color/c_scan_666"
            app:key_width="@dimen/dp_100"
            app:key_size="14" />
        <com.supcon.mes.mbap.view.CustomVerticalTextView
            android:id="@+id/memoFieldTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="memoFieldTv"
            app:content_color="@color/dark_text"
            app:content_size="14"
            app:key="@string/lims_memo"
            app:key_color="@color/c_scan_666"
            app:key_width="@dimen/dp_100"
            app:key_size="14"
            app:max_lines="2"
            />
    </LinearLayout>
</LinearLayout>