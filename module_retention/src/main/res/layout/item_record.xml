<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:id="@+id/ll_item"
        android:tag="ll_item"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wms_date"
                android:scaleType="centerInside"
                />

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/planDateTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:tag="planDateTv"
                app:content_color="@color/dark_text"
                app:content_size="14"
                app:gravity="right|center_vertical"
                app:key="@string/lims_plan_date"
                app:key_color="@color/c_scan_666"
                app:key_width="@dimen/dp_100"
                app:key_size="14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_real"
            android:tag="ll_real"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_wms_date" />

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/realDateTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:tag="realDateTv"
                app:content_color="@color/dark_text"
                app:content_size="14"
                app:gravity="right|center_vertical"
                app:key="@string/lims_real_date"
                app:key_color="@color/c_scan_666"
                app:key_width="@dimen/dp_100"
                app:key_size="14" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_state"
            android:tag="ll_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_plan_state" />

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/stateTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:tag="stateTv"
                app:content_color="@color/dark_text"
                app:content_size="14"
                app:gravity="right|center_vertical"
                app:key="@string/lims_state"
                app:key_color="@color/c_scan_666"
                app:key_width="@dimen/dp_100"
                app:key_size="14" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>