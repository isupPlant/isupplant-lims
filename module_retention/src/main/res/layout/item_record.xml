<?xml version="1.0" encoding="utf-8"?>
<com.supcon.common.view.view.CustomSwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemSwipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="itemSwipeLayout"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:tag="ll_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_wms_date" />

                <com.supcon.mes.mbap.view.CustomTextView
                    android:id="@+id/planDateTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_10"
                    android:tag="planDateTv"
                    app:content_color="@color/dark_text"
                    app:content_size="14"
                    app:gravity="right|center_vertical"
                    app:key="@string/lims_plan_date"
                    app:key_color="@color/c_scan_666"
                    app:key_size="14"
                    app:key_width="@dimen/dp_100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_real"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:tag="ll_real">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_wms_date" />

                <com.supcon.mes.mbap.view.CustomTextView
                    android:id="@+id/realDateTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_10"
                    android:tag="realDateTv"
                    app:content_color="@color/dark_text"
                    app:content_size="14"
                    app:gravity="right|center_vertical"
                    app:key="@string/lims_real_date"
                    app:key_color="@color/c_scan_666"
                    app:key_size="14"
                    app:key_width="@dimen/dp_100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:tag="ll_state">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_plan_state" />

                <com.supcon.mes.mbap.view.CustomTextView
                    android:id="@+id/stateTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_10"
                    android:tag="stateTv"
                    app:content_color="@color/dark_text"
                    app:content_size="14"
                    app:gravity="right|center_vertical"
                    app:key="@string/lims_state"
                    app:key_color="@color/c_scan_666"
                    app:key_size="14"
                    app:key_width="@dimen/dp_100" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemViewDelBtn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/deleteBgColor"
            android:gravity="center"
            android:tag="itemViewDelBtn"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSize_14sp" />
    </LinearLayout>
</com.supcon.common.view.view.CustomSwipeLayout>