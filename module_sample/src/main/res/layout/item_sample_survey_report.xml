<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvOddNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="13"
            android:singleLine="true"
            android:tag="tvOddNumbers"
            android:textColor="@color/fontBlack333"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="chanpinqingjiajndan_20200606_2477777" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_document_status"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_3"
                android:tag="tvEdit"
                android:text="编辑" />


        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bgGray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sample" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/tvSample"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/dp_9"
            android:tag="tvSample"
            app:gravity="center|center_vertical"
            app:key="@string/lims_sample"
            app:key_color="@color/black_text" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_goods" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/tvMateriel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/dp_9"
            android:tag="tvMateriel"
            app:gravity="center|center_vertical"
            app:key="@string/lims_materiel"
            app:key_color="@color/black_text" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_batch_number" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/tvBatchNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/dp_9"
            android:tag="tvBatchNumber"
            app:gravity="center|center_vertical"
            app:key="@string/lims_batch_number"
            app:key_color="@color/black_text" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_picksite" />

                <com.supcon.mes.mbap.view.CustomTextView
                    android:id="@+id/tvSamplingPoint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/dp_9"
                    android:tag="tvSamplingPoint"
                    app:gravity="center|center_vertical"
                    app:key="@string/lims_sampling_point"
                    app:key_color="@color/black_text" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_examiner" />

                <com.supcon.mes.mbap.view.CustomTextView
                    android:id="@+id/tvCreator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/dp_9"
                    android:tag="tvCreator"
                    app:gravity="center|center_vertical"
                    app:key="@string/lims_creator"
                    app:key_color="@color/black_text" />


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/dp_20">

            <ImageView
                android:id="@+id/ivIsQualified"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_36"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_un_qualified"
                android:tag="ivIsQualified" />


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_time" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/tvRegistrationTime"
            android:tag="tvRegistrationTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/dp_9"
            app:key="@string/lims_registration_time"
            app:key_color="@color/black_text"
            app:gravity="center|center_vertical"/>

    </LinearLayout>
</LinearLayout>