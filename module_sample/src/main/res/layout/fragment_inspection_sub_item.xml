<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_1"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_box_padding_1"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white"
            android:tag="tabLayout"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/themeColor"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/themeColor"
            app:tabTextColor="@color/font_333333" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="viewPage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_calculation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:tag="rl_calculation">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="@string/lims_calculation"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:tag="rl_save">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="#1E82D2"
                    android:gravity="center"
                    android:text="@string/lims_save"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:tag="rl_submit">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="#2874D2"
                    android:gravity="center"
                    android:text="@string/lims_submit"
                    android:textColor="@color/white" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_autoCollection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:tag="rl_fileAnalyse">

                <TextView
                    android:id="@+id/tvAutoCollection"
                    android:tag="tvAutoCollection"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:gravity="center"
                    android:background="@color/colorGreen"
                    android:textColor="@color/white"
                    android:text="自动采集"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_fileAnalyse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:tag="rl_fileAnalyse">

                <TextView
                    android:id="@+id/tvFileAnalyse"
                    android:tag="tvFileAnalyse"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:gravity="center"
                    android:background="@color/colorGreen"
                    android:textColor="@color/white"
                    android:text="解析文件"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_Serial"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:tag="rl_Serial">

                <TextView
                    android:id="@+id/tvSerial"
                    android:tag="tvSerial"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:gravity="center"
                    android:background="@color/colorGreen"
                    android:textColor="@color/white"
                    android:text="串口采集"/>

            </RelativeLayout>



        </LinearLayout>
    </LinearLayout>

</LinearLayout>