<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.supcon.mes.module_search.ui.view.SearchTitleBar
        android:id="@+id/searchTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="searchTitle" />

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fragment_sample"
                android:tag="fragment_sample"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_5"
                />

            <FrameLayout
                android:id="@+id/fragment_inspection_items"
                android:tag="fragment_inspection_items"
                android:layout_margin="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_sub_item"
            android:tag="fragment_sub_item"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />

    </LinearLayout>



</LinearLayout>