<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bgGray2"
    >

    <com.supcon.mes.module_search.ui.view.SearchTitleBar
        android:id="@+id/searchTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:tag="searchTitle" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35">
            <TextView
                android:id="@+id/readRemark"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:text="读取标记"
                android:gravity="center"
                android:textColor="@color/black_text"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <RadioGroup
                android:id="@+id/rgRemark"
                android:tag="rgRemark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/readRemark"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                >
                <RadioButton
                    android:id="@+id/rbYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:drawableLeft="@drawable/radio_style"
                    android:background="@null"
                    android:button="@null"
                    />
                <RadioButton
                    android:id="@+id/rbNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:drawableLeft="@drawable/radio_style"
                    android:background="@null"
                    android:button="@null"
                    android:checked="true"
                    />
            </RadioGroup>
        </RelativeLayout>
        <include layout="@layout/ly_recyclerview"></include>
    </LinearLayout>
    <Button
        android:id="@+id/btnConfirm"
        android:tag="btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_15"
        android:background="@color/blue_text"
        android:textColor="@color/white"
        android:text="@string/middleware_confirm"
        android:textSize="@dimen/fontSize_16sp"
        ></Button>
</RelativeLayout>