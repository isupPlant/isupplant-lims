<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_8_solid_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10">

        <TextView
            android:id="@+id/tvSample"
            android:tag="tvSample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/font_333333"
            android:textSize="@dimen/fontSize_14sp"
            android:textStyle="bold"
            tools:text="SampleM1(0060)" />

        <TextView
            android:id="@+id/tvSampleState"
            android:tag="tvSampleState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_document_status"
            android:gravity="center"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_3"
            android:textColor="#1F82D2"
            android:textSize="@dimen/fontSize_14sp"
            tools:text="待取样" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DCDCDC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10">


        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:src="@drawable/ic_sampling_point_green" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/ctSamplingPoint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_9"
            android:tag="ctSamplingPoint"
            app:content_color="@color/font_333333"
            app:content_size="15"
            app:gravity="right|center_vertical"
            app:key="@string/lims_sampling_point"
            app:key_color="@color/font_666666"
            app:key_size="13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:src="@drawable/ic_batch_number" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/ctBatchNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_9"
            android:tag="ctBatchNumber"
            app:content_color="@color/font_333333"
            app:content_size="15"
            app:gravity="right|center_vertical"
            app:key="@string/lims_batch_number"
            app:key_color="@color/font_666666"
            app:key_size="13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:src="@drawable/ic_time" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/ctRegisterTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_9"
            android:tag="ctRegisterTime"
            app:content_color="@color/font_333333"
            app:content_size="15"
            app:gravity="right|center_vertical"
            app:key="@string/lims_registration_time"
            app:key_color="@color/font_666666"
            app:key_size="13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:tag="llExpand">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@drawable/ic_lims_branch_sample_type" />

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/ctBranchSampleType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_9"
                android:tag="ctBranchSampleType"
                app:content_color="@color/font_333333"
                app:content_size="15"
                app:gravity="right|center_vertical"
                app:key="@string/lims_branch_sample_type"
                app:key_color="@color/font_666666"
                app:key_size="13" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@drawable/ic_materiel" />

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/ctMateriel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_9"
                android:tag="ctMateriel"
                app:content_color="@color/font_333333"
                app:content_size="15"
                app:gravity="right|center_vertical"
                app:key="@string/lims_materiel"
                app:key_color="@color/font_666666"
                app:key_size="13" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@drawable/ic_lims_sample_purpose" />

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/ctSamplePurpose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_9"
                android:tag="ctSamplePurpose"
                app:content_color="@color/font_333333"
                app:content_size="15"
                app:gravity="right|center_vertical"
                app:key="@string/lims_sample_purpose"
                app:key_color="@color/font_666666"
                app:key_size="13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@drawable/ic_lims_sample_type" />

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/ctSampleType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_9"
                android:tag="ctSampleType"
                app:content_color="@color/font_333333"
                app:content_size="15"
                app:gravity="right|center_vertical"
                app:key="@string/lims_sample_type"
                app:key_color="@color/font_666666"
                app:key_size="13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@drawable/ic_quality_standard" />

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/ctQualityStandard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_9"
                android:tag="ctQualityStandard"
                app:content_color="@color/font_333333"
                app:content_size="15"
                app:gravity="right|center_vertical"
                app:key="@string/lims_quality_standard"
                app:key_color="@color/font_666666"
                app:key_size="13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@drawable/ic_lims_sample_retention_status" />

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/ctSampleRetentionState"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_9"
                android:tag="ctSampleRetentionState"
                app:content_color="@color/font_333333"
                app:content_size="15"
                app:gravity="right|center_vertical"
                app:key="@string/lims_sample_retention_state"
                app:key_color="@color/font_666666"
                app:key_size="13" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlExpand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="right"
        android:paddingEnd="@dimen/dp_10"
        android:tag="rlExpand">

        <TextView
            android:id="@+id/tvExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:tag="tvExpand"
            android:text="@string/middleware_more"
            android:textColor="#2874D2"
            android:textSize="@dimen/fontSize_14sp" />

        <ImageView
            android:id="@+id/ivExpand"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_9"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toEndOf="@id/tvExpand"
            android:src="@drawable/ic_lims_open"
            android:tag="ivExpand" />

    </RelativeLayout>

</LinearLayout>