<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:tag="item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:translationZ="2dp"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_15"
                android:background="@drawable/inspection_items"/>


            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/tvInspectionItems"
                android:tag="tvInspectionItems"
                style="@style/yh_custom_view_horizontal_style"
                app:content_color="@color/font_333333"
                app:gravity="center|center_vertical"
                app:key="检验项目"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_15"
                android:background="@drawable/ic_unit_measurement"/>

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/tvRepeatNumber"
                android:tag="tvRepeatNumber"
                style="@style/yh_custom_view_horizontal_style"
                app:content_color="@color/font_333333"
                app:gravity="center|center_vertical"
                app:key="重复号"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_15"
                android:background="@drawable/ic_version"/>

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/ctVersionNumber"
                android:tag="ctVersionNumber"
                style="@style/yh_custom_view_horizontal_style"
                app:content_color="@color/font_333333"
                app:gravity="center|center_vertical"
                app:key="版本号"
                />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:id="@+id/tvState"
                android:tag="tvState"
                android:layout_centerInParent="true"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:background="@drawable/shape_document_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontSize_14sp" />

        </RelativeLayout>



        <RelativeLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_select"
                android:tag="iv_select"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_no"/>

        </RelativeLayout>


    </LinearLayout>




</LinearLayout>